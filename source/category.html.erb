<header>
  <h1 class="lead">Articles in category '<%= category %>'</h1>
</header>

<ul>
  <% blog.articles.select do |article| %>
    <% if article.data.categories.include?(category) %>
      <li><%= link_to article.title, article %></li> <span><!--(<%= article.date.strftime('%B %e, %Y') %>)</span></li>-->
    <% end %>
  <% end %>
</ul>
